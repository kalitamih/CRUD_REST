{
  "name": "crud-rest",
  "version": "1.0.0",
  "description": "IN MEMORY CRUD REST SERVICE WITH VALIDATION",
  "main": "src/index.js",
  "scripts": {
    "start": "node dist/index.js",
    "build": "babel src --out-dir dist --copy-files --extensions .js",
    "dev": "STAGE=dev nodemon --exec ts-node src/index.ts",
    "watch": "nodemon",
    "lint": "tsc --noEmit && tslint -c tslint.json 'src/**/*.{ts}'",
    "launch:db": "docker-compose up -d",
    "migrate:db": "npx sequelize-cli db:migrate",
    "seed:db": "npx sequelize-cli db:seed:all",
    "test": "jest --env=node --colors --coverage test",
    "tsc": "tsc"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "post-commit": "git update-index -g",
      "pre-push": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "prettier --write",
      "npm run lint",
      "git add"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kalitamih/CRUD_REST.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/kalitamih/CRUD_REST/issues"
  },
  "homepage": "https://github.com/kalitamih/CRUD_REST#readme",
  "devDependencies": {
    "@babel/cli": "^7.7.4",
    "@babel/core": "^7.7.4",
    "@babel/plugin-transform-runtime": "^7.7.4",
    "@babel/preset-env": "^7.7.4",
    "@babel/preset-typescript": "^7.7.4",
    "@babel/runtime": "^7.7.4",
    "@types/bcrypt": "^3.0.0",
    "@types/bluebird": "^3.5.29",
    "@types/cors": "^2.8.6",
    "@types/express": "^4.17.2",
    "@types/jest": "^24.0.23",
    "@types/joi": "^14.3.4",
    "@types/jsonwebtoken": "^8.3.5", 
    "@types/node": "^12.12.11",
    "@types/redis": "^2.8.14",
    "@types/sequelize": "^4.28.7",
    "@types/swagger-ui-express": "^4.1.0",
    "@types/uuid": "^3.4.6",
    "@types/winston": "^2.4.4",
    "babel-cli": "^6.26.0",
    "babel-jest": "^24.9.0",
    "babel-plugin-transform-class-properties": "^6.24.1",
    "babel-preset-env": "^1.7.0",
    "husky": "^3.1.0",
    "jest": "^24.9.0",
    "lint-staged": "^9.4.3",    
    "nodemon": "^2.0.0",
    "prettier": "^1.19.1",
    "regenerator-runtime": "^0.13.3",
    "sequelize-cli": "^5.5.1",   
    "swagger-ui-express": "^4.1.2",
    "ts-jest": "^24.2.0",
    "ts-node": "^8.5.2",
    "ts-node-dev": "^1.0.0-pre.44",
    "tslint": "^5.20.1",
    "tslint-config-prettier": "^1.18.0",
    "tslint-plugin-prettier": "^2.0.1",
    "typescript": "^3.7.3"
  },
  "dependencies": {
    "bcrypt": "^3.0.7",
    "bluebird": "^3.7.2",
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "joi": "^14.3.1",
    "jsonwebtoken": "^8.5.1",
    "pg": "^7.14.0",
    "pg-hstore": "^2.3.3",
    "redis": "^2.8.0",    
    "sequelize": "^5.21.2",
    "uuid": "^3.3.3",
    "winston": "^3.2.1"
  }
}
