{
  "name": "crud-rest",
  "version": "1.0.0",
  "description": "IN MEMORY CRUD REST SERVICE WITH VALIDATION",
  "main": "src/index.js",
  "scripts": {
    "start": "node dist/index.js",
    "build": "tsc",
    "dev": "nodemon --exec ts-node src/index.ts",
    "watch": "nodemon",
    "lint": "tsc --noEmit && tslint -c tslint.json 'src/**/*.{ts,tsx}'" 
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "post-commit": "git update-index -g",
      "pre-push": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "prettier --write",
      "npm run lint",
      "git add"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kalitamih/CRUD_REST.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/kalitamih/CRUD_REST/issues"
  },
  "homepage": "https://github.com/kalitamih/CRUD_REST#readme",
  "devDependencies": {
    "@types/express": "^4.17.2",
    "@types/node": "^12.12.11",
    "husky": "^3.1.0",
    "lint-staged": "^9.4.3",
    "nodemon": "^2.0.0",
    "prettier": "^1.19.1",
    "ts-node": "^8.5.2",
    "ts-node-dev": "^1.0.0-pre.44",
    "tslint": "^5.20.1",
    "tslint-config-prettier": "^1.18.0",
    "tslint-plugin-prettier": "^2.0.1",
    "typescript": "^3.7.2"
  },
  "dependencies": {
    "express": "^4.17.3"
  }
}
